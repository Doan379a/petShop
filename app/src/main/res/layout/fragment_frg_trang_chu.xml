<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vang_nhat"
    tools:context=".fragment.frgTrangChu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txttieu_de"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/baloothambi2medium"
                android:text="hi truong"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtim_kiem"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@+id/txttieu_de"
                android:layout_marginHorizontal="20sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/khung_ed_tim_kiem"
                android:drawableEnd="@drawable/search_doan"
                android:hint="Tìm kiếm sản phẩm"
                android:paddingLeft="30sp"
                android:paddingRight="10sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtim_kiem"
                android:layout_marginTop="20sp"
                android:background="@drawable/nen_trangchu_doan">

                <ViewFlipper
                    android:id="@+id/slide"
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:layout_marginTop="10sp"
                    android:autoStart="true"
                    android:flipInterval="2500"
                    android:inAnimation="@anim/slide_in_right"
                    android:outAnimation="@anim/slide_in_right">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp">
                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/khung_anh"
                            android:scaleType="centerCrop"
                            android:src="@drawable/anh5" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/anh4" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/anh3" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/anh2" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/anh1" />
                    </androidx.cardview.widget.CardView>
                </ViewFlipper>
<!--                <androidx.viewpager2.widget.ViewPager2-->
<!--                    android:id="@+id/slide"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="250sp"-->
<!--                    android:layout_marginTop="10sp"/>-->
                <TextView
                    android:id="@+id/tenkoquantrong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/slide"
                    android:layout_marginLeft="25sp"
                    android:fontFamily="@font/baloothambi2medium"
                    android:text="tên sản phẩm"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvtrangchu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tenkoquantrong"
                    android:layout_marginLeft="25sp"
                    tools:listitem="@layout/item_trang_chu" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>