<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vang_nhat"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/img_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/hi_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_Back"
        android:layout_marginLeft="15sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="HI, Trường"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hi_Name"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="30sp"
        android:src="@drawable/khung_profile" />

    <ImageView
        android:id="@+id/imgAvatar_Profile"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_below="@+id/hi_Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/anh_nguoi_dung" />

    <LinearLayout
        android:id="@+id/lin_Khung_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgAvatar_Profile"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/khung_ten_profile"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPMaNguoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Mã người dùng: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Tên đăng nhập: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPHoTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Họ và tên: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Số điện thoại: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Email: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Địa chỉ: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPSoTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/baloothambi2medium"
            android:text="Tiền hiện có: "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtPLoaiTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"

            android:fontFamily="@font/baloothambi2medium"
            android:text="Loại tài khoản: "
            android:textSize="18sp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtten_nguoi_dung"
            android:layout_marginBottom="10sp"
            >

            <TextView
                android:id="@+id/txtLichSuMua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem lịch sử mua hàng của bạn"
                android:fontFamily="@font/baloothambi2medium"
                android:textColor="@color/mau_chu"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/btnXem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem"
                android:textColor="#3852B0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.952"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.022" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_PDangXuat"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_Khung_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:background="@drawable/khung_button"
        android:text="Đăng xuất" />
</RelativeLayout>