<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/khung_item"

        >

        <ImageView
            android:layout_width="100sp"
            android:layout_height="110sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="30sp"
            android:layout_gravity="center"
            android:background="@drawable/anh_sanpham" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtten_hat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="@font/baloothambi2regular"
                    android:text="tne hat"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btnxoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="7sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/khung_item"
                    android:src="@drawable/ic_xoa" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtgia_hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/baloothambi2regular"
                android:drawableEnd="@drawable/ic_coin"
                android:text="300"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txttrang_thai_san_pham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/baloothambi2regular"
                android:text="lượt bán "
                android:textSize="20sp" />
            <Button
                android:id="@+id/txtgia_san_pham"
                android:layout_width="wrap_content"
                android:padding="5sp"
                android:layout_height="45sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="7sp"
                android:fontFamily="@font/baloothambi2regular"
                android:layout_gravity="end"
                android:layout_marginEnd="10sp"
                android:text="Thêm vào giỏ hàng"
                android:drawableEnd="@drawable/cart_doan"
                android:background="@drawable/khung_button"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>