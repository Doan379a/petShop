<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".man_hinh_dang_ky"
    android:background="@drawable/khung_radius_top_30"
  >
    <TextView
        android:id="@+id/txt_Dang_ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="50sp"
        android:text="Đăng ký"
        android:fontFamily="@font/baloothambi2semibold"
        android:textSize="28sp"
        android:textColor="@color/mau_chu"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/txt_Dang_ky"
        android:background="@drawable/khung_man_dang_ky"
        android:id="@+id/lin_khung_Dang_ky">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="20sp"
           >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:fontFamily="@font/baloothambi2semibold"
                android:textSize="18sp"
                android:textColor="@color/mau_chu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên đăng nhập"
                android:fontFamily="@font/baloothambi2regular"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:fontFamily="@font/baloothambi2semibold"
                android:textSize="18sp"
                android:textColor="@color/mau_chu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mật khẩu"
                android:fontFamily="@font/baloothambi2regular"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nhập lại mật khẩu"
                android:fontFamily="@font/baloothambi2semibold"
                android:textSize="18sp"
                android:textColor="@color/mau_chu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu"
                android:fontFamily="@font/baloothambi2regular"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ tên"
                android:fontFamily="@font/baloothambi2semibold"
                android:textSize="18sp"
                android:textColor="@color/mau_chu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập họ và tên"
                android:fontFamily="@font/baloothambi2regular"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:fontFamily="@font/baloothambi2semibold"
                android:textSize="18sp"
                android:textColor="@color/mau_chu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số điện thoại"
                android:fontFamily="@font/baloothambi2regular"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:fontFamily="@font/baloothambi2semibold"
                android:textSize="18sp"
                android:textColor="@color/mau_chu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập địa chỉ"
                android:fontFamily="@font/baloothambi2regular"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/baloothambi2semibold"
                android:textSize="18sp"
                android:textColor="@color/mau_chu"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập email"
                android:fontFamily="@font/baloothambi2regular"
                android:textSize="18sp"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_Dang_Ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_khung_Dang_ky"
        android:text="Đăng ký"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/baloothambi2semibold"
        android:textSize="22sp"
        android:background="@drawable/khung_button_dangnhap"
        android:layout_marginTop="12sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Dang_Ky"
        android:text="Trở về"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/baloothambi2semibold"
        android:textSize="22sp"
        android:background="@drawable/khung_button_dangnhap"
        android:layout_marginTop="12sp"
        />
</RelativeLayout>