<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="10sp">
    <ImageView
        android:layout_width="140sp"
        android:layout_height="140sp"
        android:id="@+id/imgAnhsp"/>
    <TextView
        android:id="@+id/txtmaChiTietDon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:fontFamily="@font/baloothambi2semibold"
        android:text="Mã chi tiết đơn hàng"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtMaDonHang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="Mã đơn hàng"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtMaSanPham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="Mã sản phẩm"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtSoLuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="Số lượng"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDonGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="Đơn giá"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtThanhTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:fontFamily="@font/baloothambi2regular"
        android:text="Thành tiền"
        android:textSize="18sp" />
</LinearLayout>